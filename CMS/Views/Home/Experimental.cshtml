
@{
    ViewData["Title"] = "Experimental";
    Layout = "~/Views/Shared/_Experimental.cshtml";
}


<v-content>
    <v-container fluid grid-list-md>
        <h2>{{page_title}}</h2>

        <v-layout row wrap>
            <v-flex grow d-flex align-center justify-center display-1 red white--text box>
                <p v-for="row in rows">{{row}}</p>
            </v-flex>
            <v-flex grow d-flex align-center justify-center display-2 green white--text box>
                <p v-for="row in rows">{{row}}</p>
            </v-flex>
            <v-flex grow d-flex align-center justify-center display-3 blue white--text box>
                Box 1
            </v-flex>
        </v-layout>
    </v-container>
</v-content>


@section Scripts {

    <script>

        var vueapp = new Vue(
            {
                el: '#app',
                data: {
                    drawer: false,
                    page_title: "Layout Experiment",
                    rows: ['hi']
                }
            }
        );

    </script>
}

@section styles {

    <style>

        .box {
            height: 500px;
            margin: 12px;
        }


    </style>


}