<!DOCTYPE html>
<html>
<!-- --------------------------------------------------------------------- -->
<!--                                                                       -->
<!--               Views/Shared/_LandingLayout.cshtml                      -->
<!--                                                                       -->
<!-- --------------------------------------------------------------------- -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMS</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/materialize.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="/material-icons/material-icons.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/materialize.min.css"
              asp-fallback-href="~/css/materialize.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/material-icons/material-icons.css" />
    </environment>

    <!--
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900|Material+Icons" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/vuetify/dist/vuetify.min.css" rel="stylesheet">
    -->
    <link href="~/css/vuetify.min.css" rel="stylesheet" />
    <style>

        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            padding: 0;
            background-color: #318182;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>


<body>
    <div style="min-height: 100%;" id="app">
        @RenderBody()
    </div>

    <script src='~/dist/bundle.js?ver=20190521'></script>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/materialize.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/materialize.js"></script>
    </environment>

    <script src="~/js/promise-polyfill.min.js"></script>
    <script src="~/dist/bundle.js"></script>
    <!--
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vuetify/dist/vuetify.js"></script>
    -->

    <!-- PH - switched to VueJS version 6.14 minified -->
    <!--      vue.js is still in js folder - it is version 2.5.16 -->
    <script src="~/js/vue.6.14.min.js"></script>
    <script src="~/js/vuetify.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
